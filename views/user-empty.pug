doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

		title Нет заказов и рек - Сайт ТИЗ


		link(rel="apple-touch-icon", sizes="180x180", href="img/apple-touch-icon.png")
		link(rel="icon", type="image/png", sizes="32x32", href="img/favicon-32x32.png")
		link(rel="icon", type="image/png", sizes="16x16", href="img/favicon-16x16.png")
		

		include layouts/styles.pug
	body
		.page-wrapper

			include layouts/header.pug

			.dflt-breadcrumbs
				.container
					ul
						li
							a(href="#") Главная
						li
							span Личный кабинет
			
			section.user-profile
				.container
					.user-profile__info
						.user-profile__head
							.user-profile__box-left
								.user-profile__img
									img(src="img/user-img-1.jpg", alt="img")
								.user-profile__parameters
									h3.user-profile__name 
										|	Семёнов Иван Петрович
									ul.user-profile__contacts
										li +7 909 000 99 88
										li ivan@mail.ru
							.user-profile__box-right
								ul.user-profile__checkbox-group 
									li
										.dflt-checkbox
											input.dflt-checkbox__input(type="checkbox" id="mailing" checked)
											label.dflt-checkbox__label(for="mailing") 
												span.dflt-checkbox__label-icon
													<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
														<path fill-rule="evenodd" clip-rule="evenodd" d="M13.8047 3.52876C14.0651 3.78911 14.0651 4.21122 13.8047 4.47157L6.4714 11.8049C6.21106 12.0653 5.78894 12.0653 5.5286 11.8049L2.19526 8.47157C1.93491 8.21122 1.93491 7.78911 2.19526 7.52876C2.45561 7.26841 2.87772 7.26841 3.13807 7.52876L6 10.3907L12.8619 3.52876C13.1223 3.26841 13.5444 3.26841 13.8047 3.52876Z" fill="#53818C"/>
													</svg>
												span.dflt-checkbox__label-text
													span Получать рассылку на e-mail
									li
										.dflt-checkbox
											input.dflt-checkbox__input(type="checkbox" id="notificationsEmail" checked)
											label.dflt-checkbox__label(for="notificationsEmail") 
												span.dflt-checkbox__label-icon
													<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
														<path fill-rule="evenodd" clip-rule="evenodd" d="M13.8047 3.52876C14.0651 3.78911 14.0651 4.21122 13.8047 4.47157L6.4714 11.8049C6.21106 12.0653 5.78894 12.0653 5.5286 11.8049L2.19526 8.47157C1.93491 8.21122 1.93491 7.78911 2.19526 7.52876C2.45561 7.26841 2.87772 7.26841 3.13807 7.52876L6 10.3907L12.8619 3.52876C13.1223 3.26841 13.5444 3.26841 13.8047 3.52876Z" fill="#53818C"/>
													</svg>
												span.dflt-checkbox__label-text
													span Получать оповещения о заказе по e-mail
									li
										.dflt-checkbox
											input.dflt-checkbox__input(type="checkbox" id="notificationsMessages" checked)
											label.dflt-checkbox__label(for="notificationsMessages") 
												span.dflt-checkbox__label-icon
													<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
														<path fill-rule="evenodd" clip-rule="evenodd" d="M13.8047 3.52876C14.0651 3.78911 14.0651 4.21122 13.8047 4.47157L6.4714 11.8049C6.21106 12.0653 5.78894 12.0653 5.5286 11.8049L2.19526 8.47157C1.93491 8.21122 1.93491 7.78911 2.19526 7.52876C2.45561 7.26841 2.87772 7.26841 3.13807 7.52876L6 10.3907L12.8619 3.52876C13.1223 3.26841 13.5444 3.26841 13.8047 3.52876Z" fill="#53818C"/>
													</svg>
												span.dflt-checkbox__label-text
													span Получать оповещения о заказе по СМС
								ul.user-profile__btn-group
									li
										a(href="#") Выйти из аккаунта
									li
										a(href="#") Редактировать профиль
									li
										a(href="#") Удалить профиль
						.user-profile__data
								//при добавлении на див класса "user-profile__data-left--none-dflt" скрывается блок "ВЫ ЕЩЕ НИЧЕГО НЕ ЗАКАЗЫВАЛИ"; при добавлении на див класса "user-profile__data-left--none-order" скрываются все заказы
								.user-profile__data-left
									h2.user-profile__title Заказы
									.user-profile__content
										.user-profile__content-dflt
											p Вы ещё ничего не заказывали.
											.user-profile__bttn-wrapp
												a(href="#").dflt-bttn
													span Перейти в каталог
								//при добавлении на див класса "user-profile__data-left--none-dflt" скрывается блок "ДОБАВИТЬ РЕКВИЗИТЫ"; при добавлении на див класса "user-profile__data-right--none-requisites" скрываются РЕКВИЗИТЫ
								.user-profile__data-right
									h2.user-profile__title Реквизиты компании
									.user-profile__content
										.user-profile__content-dflt
											p Являетесь представителем компании? Добавьте данные, для автозаполнения формы выставления счёта.
											.user-profile__bttn-wrapp
												a(href="#").dflt-bttn
													span Добавить реквизиты
			include layouts/s-subscribe.pug

			include layouts/footer.pug

		include layouts/scripts.pug
